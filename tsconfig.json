{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    // set a root so the paths alias works
    "jsx": "react-jsx",
    "baseUrl": ".",
    "strict": true,
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}